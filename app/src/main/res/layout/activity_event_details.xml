<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.medabde.musicevent.ActivityEventDetails">



    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/dtsbandImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/detailsHeadLiner"
        android:text="Headliner"
        android:textColor="#ff212121"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dtsbandImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dtsVenue"
        android:text="Venue"
        android:textColor="#ff212121"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detailsHeadLiner"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dtsWhere"
        android:text="oujda"
        android:textColor="#ff212121"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dtsVenue"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dtsWhen"
        android:text="30/18/2030"
        android:textColor="#ff212121"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dtsWhere"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
